<a id="box-office-link" href="/">Box Office</a>
<section id="quiz-content" class="section">
  <div id="main" class="container">
    <h1 class="quiz-header">{{username}} is currently playing the {{category}} quiz</h1>
    <h2 class="quiz-header">Current Score: <span id='current-score'>0</span></h2>
    <div class="columns">
      <div id="question-container" class="column">
        {{questions}}*QUESTION APPEARS HERE*
      </div>
    </div>

    <section id="answers" class="btn-grid">
      <div class="row">
        <button id="answer1" class="btn">{{answer1}}ANSWER1</button>
      </div>
      
      <div class="row">
        <button id="answer2" class="btn">{{answer2}}ANSWER2</button>
      </div>
      
      <div class="row">
        <button id="answer3" class="btn">{{answer3}}ANSWER3</button>
      </div>
      
      <div class="row">
        <button id="answer4" class="btn">{{answer4}}ANSWER4</button>
      </div>
    </section>
    
  </div>
</section>

<modal id="score-input" class="hide">
  <input>
  <input>

</modal>

<div id="cat" style="display: none;">{{category}}</div>

<script src="/javascript/quiz.js"></script>